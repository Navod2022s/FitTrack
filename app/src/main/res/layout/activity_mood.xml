<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Motivational Quote at the Top -->
    <TextView
        android:id="@+id/quoteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/quote_text"
        android:textAlignment="center"
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_marginBottom="24dp"
        android:textColor="?attr/colorPrimary"/>

    <!-- Today's Mood Label -->
    <TextView
        android:id="@+id/todayMoodText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/todaysMood"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <!-- Mood Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/moodHappy"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/happy"
            android:textSize="32sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:backgroundTint="?attr/colorSecondary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/moodNeutral"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/neutral"
            android:textSize="32sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_marginStart="16dp"
            app:backgroundTint="?attr/colorSecondary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/moodSad"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/sad"
            android:textSize="32sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_marginStart="16dp"
            app:backgroundTint="?attr/colorSecondary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/moodAngry"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/angry"
            android:textSize="32sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_marginStart="16dp"
            app:backgroundTint="?attr/colorSecondary"/>

    </LinearLayout>

</LinearLayout>
